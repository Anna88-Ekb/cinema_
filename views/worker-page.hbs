<html lang="ru">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="{{cinemaPanelCssFile}}" />
</head>

<body>
  {{#if worker_login}}
  <div class="container">
    <div class="account">
      <div class="menu-top">
        {{#if worker_name}}
        <div>
          <p>{{worker_name.worker_family_name}} {{worker_name.worker_name}} {{worker_name.worker_patronymic}}</p>
          <button class="exit_btn">Выйти
            <svg class="exit_btn_img" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 10 10"
              id="svg2">
              <path
                d="m 2.75,0 0,2.5 1.25,0 0,-1.25 4.75,0 0,7.5 L 4,8.75 4,7.5 2.75,7.5 2.75,10 10,10 10,0 z M 5,2.5 l 0,1.75 -4,0 0,1.5 4,0 L 5,7.5 8,5 z"
                id="entrance"></path>
            </svg>
          </button>
        </div>
        {{/if}}
      </div>
      <div class="account-view">
        <div class="menu-left">
          <div class="menu-left__items">
            <ul>
              <li class="start_page"><a href="#">Главная</a></li>
              {{#if worker_access}}
              {{#each worker_access}}
              {{#if (eq this 1)}}
              {{#each ../tables_obj}}
              <li class="manager_tables">{{this.category}}<span class="arrow"></span>
                <ul class="unblock">
                  {{#each this.tables}}
   
                  <li><a href="#" data-table-name="{{this.table_name}}">{{this.table_comment}}</a></li>
          
                  {{#if (eq this.table_name 'cinema')}}
                 <li><a class="open_posters" href="#">Постеры</a></li>
                  {{/if}}
                  {{#if (eq this.table_name 'rent')}}
                 <li><a class="open_my_application" href="#">Мои заявки</a></li>
                 <li><a class="open_application" href="#">Необработанные заявки</a></li>
                  {{/if}}
                  {{/each}}
                </ul>
              </li>
              {{/each}}
              <li class="manager_reporting">Аналитика и отчетность<span class="arrow"></span>
                <ul>
                <li><a href="#" class='sales_report'>Продаж</a></li>
                <li><a href="#" class='attendance_report'>Посещаемости</a></li>
                </ul>
              </li>
              {{/if}}
              {{/each}}
              {{/if}}
            </ul>
          </div>
        </div>
        {{> panel_employee/start_page}}
      </div>
    </div>
  </div>
  {{/if}}
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="{{cinemaPanelJsFile}}"></script>

</body>

</html>