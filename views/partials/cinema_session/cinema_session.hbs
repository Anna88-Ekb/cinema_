<section class="cinema_sessions" id="cinema_sessions">
  <h2>Расписание</h2>
  <div class="cinema_sessions_container">
      <div class="cinema_sessions_filter gradient">
        <div class="cinema_sessions_filter_container">
          <div class="cinema_sessions_filter_error"><button class="cinema_sessions_filter_error_btn"
              title="Закрыть"><span></span></button>
            <p></p>
          </div>
          <div class="search_list_container">
            <button class="search_list_btn" title="Поиск сеансов"><span></span></button><input type="text" maxlength="2"
              title="Начните вводить текст и выберите из списка"><button class="movie_list_btn"
              title="Свернуть/развернуть"><span></span></button>
          </div>
        </div>
        <ul class="block">
          {{#each movies}}
          <li>{{{this.cinema_name}}}</li>
          {{/each}}
        </ul>
    </div>
    <div class="cinema_sessions_halls"></div>
    {{> cinema_session/cinema_session_calendar}}
  </div>
</section>